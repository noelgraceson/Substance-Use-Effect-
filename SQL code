WHEN CIRROSEVR = 2 THEN 'NO'
ELSE 'INVALID'
END LIVER_CIRRHOSIS,

CASE 
WHEN HEPBCEVER = 1 THEN 'YES'
WHEN HEPBCEVER = 2 THEN 'NO'
ELSE 'INVALID'
END HEPATITIS,

CASE 
WHEN KIDNYDSEV = 1 THEN 'YES'
WHEN KIDNYDSEV = 2 THEN 'NO'
ELSE 'INVALID'
END KIDNEY_DISEASE,

CASE 
WHEN ASTHMAEVR = 1 THEN 'YES'
WHEN ASTHMAEVR = 2 THEN 'NO'
ELSE 'INVALID'
END ASTHMA


FROM [project].[dbo].[physical health];


