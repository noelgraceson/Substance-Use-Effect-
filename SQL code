--ALCOHOL
SELECT 
  QUESTID2,

  -- ALCEVER
  CASE 
    WHEN ALCEVER = 1 THEN 'YES'
    WHEN ALCEVER = 2 THEN 'NO'
    ELSE 'INVALID'
  END AS DYD_STATUS,

  -- ALCYRTOT
  CASE
    WHEN ALCYRTOT BETWEEN 1 AND 149 THEN 'OCCASIONAL'
    WHEN ALCYRTOT BETWEEN 150 AND 366 THEN 'OFTEN'
    WHEN ALCYRTOT = 989 THEN 'SKIPPED'
    WHEN ALCYRTOT = 991 THEN 'NEVER'
    WHEN ALCYRTOT = 993 THEN 'NOT IN 12 MOS'
    ELSE 'INVALID'
  END AS HO_STATUS,

--ALCBNG30D
CASE 
WHEN ALCBNG30D BETWEEN 2 AND 30 THEN 'BINGE DRINKING'
WHEN ALCBNG30D = 80 THEN 'BINGE DRINKING'
WHEN ALCBNG30D = 91 THEN 'NEVER'
WHEN ALCBNG30D = 93 THEN 'NOT IN THIS MONTH'
ELSE 'INVALID'
END AS BINGE_STATUS

into dbo.alcohol_summary
FROM [project].[dbo].[alcohol.use];


--COCCAINE
SELECT QUESTID2,

--COCEVER
CASE
WHEN COCEVER = 1 THEN 'YES'
WHEN COCEVER = 2 THEN 'NO'
ELSE 'INVALID'
END DYU_COC,

--COCYRTOT
CASE 
WHEN COCYRTOT BETWEEN 1 AND 150 THEN 'OCCASIONAL'
WHEN COCYRTOT BETWEEN 150 AND 360 THEN 'OFTEN'
WHEN COCYRTOT = 991 THEN 'NEVER'
WHEN COCYRTOT = 993 THEN 'NOT IN 12 MOS'
ELSE 'INVALID'
END HOC_STATUS,

--CCDAYPWK
CASE 
WHEN CCDAYPWK BETWEEN 2 AND 7 THEN 'OFTEN'
WHEN CCDAYPWK = 1 THEN 'OCCASIONAL'
WHEN CCDAYPWK = 91 THEN 'NEVER'
WHEN CCDAYPWK = 93 THEN 'NOT IN 12 MOS'
ELSE 'INVALID'
END HOUCW_STATUS

into dbo.coccaine_summary
  FROM [project].[dbo].[coccaine.use];


--PATINET DEMOGRAPHICS
  SELECT QUESTID2,

--IRSEX
CASE 
WHEN IRSEX = 1 THEN 'M'
WHEN IRSEX = 2 THEN 'F'
ELSE 'INVALID'
END GENDER,

--AGE2
CASE
WHEN AGE2 = 1 THEN '12'
WHEN AGE2 = 2 THEN '13'
WHEN AGE2 = 3 THEN '14'
WHEN AGE2 = 4 THEN '15'
WHEN AGE2 = 5 THEN '16'
WHEN AGE2 = 6 THEN '17'
WHEN AGE2 = 7 THEN '18'
WHEN AGE2 = 8 THEN '19'
WHEN AGE2 = 9 THEN '20'
WHEN AGE2 = 10 THEN '21'
WHEN AGE2 = 11 THEN '22/23'
WHEN AGE2 = 12 THEN '24/25'
WHEN AGE2 = 13 THEN '26-29'
WHEN AGE2 = 14 THEN '30-34'
WHEN AGE2 = 15 THEN '35-49'
WHEN AGE2 = 16 THEN '50-64'
WHEN AGE2 = 17 THEN '>65'
ELSE 'INVALID'
END AGE,

--HEALTH
CASE 
WHEN HEALTH = 1 THEN 'EXCELLENT'
WHEN HEALTH = 2 THEN 'VERY GOOD'
WHEN HEALTH = 3 THEN 'GOOD'
WHEN HEALTH = 4 THEN 'FAIR'
WHEN HEALTH = 5 THEN 'POOR'
ELSE 'INVALID'
END HEALTH,

--DIFFTHINK
CASE
WHEN DIFFTHINK = 1 THEN 'YES'
WHEN DIFFTHINK = 2 THEN 'NO'
ELSE 'INVALID'
END DCRD_STATUS,

--IRWRKSTAT
CASE 
WHEN IRWRKSTAT = 1 THEN 'FULL TIME'
WHEN IRWRKSTAT = 2 THEN 'PART TIME'
WHEN IRWRKSTAT = 3 THEN 'UNEMPLOYED'
WHEN IRWRKSTAT = 99 THEN 'KID'
ELSE 'INVALID'
END EMPLOYMENT


FROM [project].[dbo].[demogaphics];


--MENTAL HEALTH
SELECT QUESTID2,

--SUICTHNK
CASE 
WHEN SUICTHNK = 1 THEN 'YES'
WHEN SUICTHNK = 2 THEN 'NO'
ELSE 'INVALID'
END SUICIDAL_THINKING,

--SUICTRY
CASE 
WHEN SUICTRY = 1 THEN 'YES'
WHEN SUICTRY = 2 THEN 'NO'
ELSE 'INVALID'
END SUICUDE_TRY,

--K6SCMAX
CASE
WHEN K6SCMAX BETWEEN 0 AND 8 THEN 'LESS'
WHEN K6SCMAX BETWEEN 8 AND 16 THEN 'MEDIUM'
WHEN K6SCMAX BETWEEN 16 AND 24 THEN 'HIGH'
ELSE 'INVALID'
END DEPRESSION_RATE,

--SPDYR
CASE
WHEN SPDYR = 0 THEN 'NO'
WHEN SPDYR = 1 THEN 'YES'
ELSE 'INVALID'
END PSYCH_DISTRESS,

--SMMIYR_U
CASE
WHEN SMMIYR_U = 0 THEN 'NO'
WHEN SMMIYR_U = 1 THEN 'YES'
ELSE 'INVALID'
END MENTAL_ILLNESS



FROM [project].[dbo].[mental.disorders];

