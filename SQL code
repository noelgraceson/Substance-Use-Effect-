--TOBACCO
SELECT QUESTID2,

--CIGEVER
CASE 
WHEN CIGEVER = 1 THEN 'YES'
WHEN CIGEVER = 2 THEN 'NO'
ELSE 'INVALID'
END DYSCIG,

--CIG30USE
CASE 
WHEN CIG30USE BETWEEN 1 AND 15 THEN 'OCCASIONAL'
WHEN CIG30USE BETWEEN 15 AND 30 THEN 'OFTEN'
WHEN CIG30USE = 91 THEN 'NEVER'
WHEN CIG30USE = 93 THEN 'NOT IN 30 DAYS'
ELSE 'INVALID'
END HODYS,

--CIG30AV
CASE
WHEN CIG30AV = 2 THEN '1'
WHEN CIG30AV = 3 THEN '2-5'
WHEN CIG30AV = 4 THEN '6-15'
WHEN CIG30AV = 5 THEN '16-25'
WHEN CIG30AV = 6 THEN '25<'
WHEN CIG30AV = 7 THEN '25<'
ELSE 'INVALID'
END HMDYS_DAY


  FROM [project].[dbo].[tobacco.use]
